<html>
    <head>
        <title>
            <%= locals.title %>
        </title>
        <script src="https://kit.fontawesome.com/86bfd4f27e.js" crossorigin="anonymous"></script>
        <link rel="stylesheet" href="/css/home.css">
    </head>
    <body>
        <h1 id="page-heading"><i class="fa-solid fa-address-book"></i> Contact List </h1>
        <ul>
            <% for(let i of contact_list) { %>
            <li>
                <span><%= i.name %></span>
                <div>
                    <span id="phone" ><%= i.phone %></span>
                    <a href="/delete-contact/?id=<%= i._id %>">
                    <i class="fa-solid fa-trash"></i>
                </a>
                </div>
            </li>
            <% } %>
        </ul>
        <div>
            <form action="/create-contact" method="post">
                <input type="text" name="name" placeholder="Enter Name" required>
                <input type="text" name="phone" placeholder="Enter Phone" required>
                <button type="submit">Add Contact</button>
            </form>
        </div>
        <script src="/js/home.js"></script>
    </body>
</html>